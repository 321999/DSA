def first_pivot(a):
	#considering my fir
#	ppst pivot is at the index
	s=0
	for i in range(1,len(a)):
		if a[i-1]>a[i]:
			pass
		else:
			s=i
#	print("start ",s)
	return s-1
def afterthis(s,a):
	g=a[s]
	
	for i in range(s+1,len(a)):
		if a[i]>a[s]:
		#	print("startgghhh ",g)
			g=i
	a[g],a[s]=a[s],a[g]
	return a

a=[1, 2,3]
def get_factorial(n):
	if n==1:
		return 1
	return n*get_factorial(n-1)

# to print number of possible permutation without repeating 

# from practical we know that 
#every position pe (n-1) time rhega 
for i in range(get_factorial(len(a))):
	print(a)
	a=afterthis(first_pivot(a),a)		
